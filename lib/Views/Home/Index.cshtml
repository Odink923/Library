@model List<lib.Models.Book>
@{
    ViewBag.Title = "Index";
}


<div class=" d-flex flex-wrap  bg-secondary py-5" tabindex="-1" role="dialog" id="modalTour">
    @foreach (var book in @Model)
    {
        <form action="/Book/Delete" method="post" class="w-50">
            <div style="padding-left:20px"  >
                <div class="modal-content  rounded-4 shadow">
                    <div class="modal-body  p-5 ">
                        <h2 class="fw-bold row mb-0">Name: @book.Name</h2>
                       
                         
                            
                        <ul class="d-grid gap-4 my-5 list-unstyled">
                            <li class="d-flex gap-4">
                                <svg class="bi text-muted flex-shrink-0" width="48" height="48"><use xlink:href="#grid-fill"></use></svg>
                                <div>
                                    <h5 class="mb-0">Id: @book.Id</h5>
                                    Not into lists? Try the new grid view.
                                </div>
                            </li>
                            <li class="d-flex gap-4">
                                <svg class="bi text-warning flex-shrink-0" width="48" height="48"><use xlink:href="#bookmark-star"></use></svg>
                                <div>
                                    <h5 class="mb-0">@book.Autor</h5>
                                    Save items you love for easy access later.
                                </div>
                            </li>
                            <li class="d-flex gap-4">
                                <svg class="bi text-primary flex-shrink-0" width="48" height="48"><use xlink:href="#film"></use></svg>
                                <img src="@book.Pictures" width="70%" />

                            </li>
                        </ul>
                        @if (ViewBag.UserId != null && ViewBag.UserId != -1)
                        {
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <button type="submit" value="Remove" class="btn btn-dark btn-primary mt-5 w-100" data-bs-dismiss="modal">Remove</button>
                        }
                    </div>
                </div>

            </div>
        </form>
    }
    </div>
